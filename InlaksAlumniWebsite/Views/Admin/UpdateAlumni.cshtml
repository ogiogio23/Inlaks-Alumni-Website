@using PagedList
@using PagedList.Mvc

@model IPagedList<InlaksAlumniWebsite.Models.Alumni >
@{
    ViewBag.Title = "UpdateAlumni";
    Layout = "~/Views/Shared/_InlaksAdminLayout.cshtml";
}

@Html.Partial("_HeaderPartial")
<!-- //header-ends -->
<!-- main content start-->
<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">
            <div class="bs-example widget-shadow" data-example-id="hoverable-table">
                <h4>Update Alumni</h4>
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Position Held</th>
                            <th>Gender</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                        </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                        </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PositionHeld)
                        </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                        </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                        </td>
                            <td>

                                @Html.ActionLink("Edit", "Edit/"+item.AlumniId, "Admin")
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteAlumni/"+item.AlumniId, "Admin")
                            </td>


                        </tr>

                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("UpdateAlumni", new { page }))
            </div>
        </div>
    </div>
</div>

