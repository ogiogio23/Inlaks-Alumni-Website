@using PagedList
@using PagedList.Mvc

@model IPagedList<InlaksAlumniWebsite.Models.Feedback>

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_InlaksAdminLayout.cshtml";
}

@Html.Partial("_HeaderPartial")


<!-- //header-ends -->
<!-- main content start-->


<div id="page-wrapper">
    <div class="main-page">

    </div>
    <div class="col-md-8 compose-right widget-shadow">
        <div class="panel-default">
            <div class="panel-heading">
                Inbox
            </div>

            <div class="inbox-page">
                <h4>Today</h4>
                <div class="inbox-row widget-shadow" id="accordion" role="tablist" aria-multiselectable="true">
                    @foreach (var item in Model) {

                    <div class="mail "> <input type="checkbox" class="checkbox"> </div>

                    <div class="mail"><img src="images/i1.png" alt="" /></div>

                    <div class="mail mail-name"> <h6>@item.Name</h6> </div>
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <div class="mail"><p>@item.Email</p></div>
                    </a>
                    <div class="mail-right dots_drop">
                        <div class="dropdown">
                            <a href="#" data-toggle="dropdown" aria-expanded="false">
                                <p><i class="fa fa-ellipsis-v mail-icon"></i></p>
                            </a>
                            <ul class="dropdown-menu float-right">
                                <li>
                                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#" aria-expanded="true" aria-controls="collapseOne">
                                        <i class="fa fa-reply mail-icon"></i>
                                        Reply
                                    </a>
                                </li>
                                <li>
                                    <a href="#" title="">
                                        <i class="fa fa-download mail-icon"></i>
                                        Archive
                                    </a>
                                </li>
                                <li>
                                    <a href="deletemessage/@item.Id" class="font-red">
                                        <i class="fa fa-trash-o mail-icon"></i>
                                        Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="mail-right"><p>@item.DateSent</p></div>
                    <div class="clearfix"> </div>
                    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                        <div class="mail-body">
                            <p>@item.Message</p>
                            <form>
                                <input type="text" placeholder="Reply to sender" required="">
                                <input type="submit" value="Send">
                            </form>
                        </div>
                    </div>
}
                </div>


            </div>


        </div>
        <div style="margin-left: 15px">
            @Html.PagedListPager(Model, page => Url.Action("Inbox", new { page }))
        </div>
    </div>
    <div class="clearfix"> </div>
</div>


