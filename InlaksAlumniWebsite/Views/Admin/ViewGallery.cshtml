@using PagedList
@using PagedList.Mvc
@model IPagedList<InlaksAlumniWebsite.Models.EventImage>

@{
    ViewBag.Title = "ViewGallery";
    Layout = "~/Views/Shared/_InlaksAdminLayout.cshtml";
    var BaseUrl = Request.Url.Host;
}

@Html.Partial("_HeaderPartial")
<!-- //header-ends -->
<!-- main content start-->
<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">
            <div class="bs-example widget-shadow" data-example-id="hoverable-table">
                <h3 class="title1">Event Photos</h3>




                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Name )
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.First().ImagesUrl)
                                </th>


                            </tr>
                         </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                       <a href="~/Content/photos/@item.ImagesUrl" target="_blank"> @Html.DisplayFor(modelItem => item.ImagesUrl)</a>
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "DeleteImage/" +item.ImageId, "Admin", new { @class = "btn btn-danger"})
                                    </td>
                                </tr>
                            }

                   </table>
                @Html.PagedListPager(Model, page => Url.Action("ViewGallery", new { page }))
                </div>
            </div>
        </div>
</div>



