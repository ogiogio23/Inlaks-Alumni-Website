@using PagedList
@using PagedList.Mvc

@model IPagedList<InlaksAlumniWebsite.Models.Admin>

@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_InlaksAdminLayout.cshtml";
}

@Html.Partial("_HeaderPartial")
<!-- //header-ends -->
<!-- main content start-->
<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">
            <div class="bs-example widget-shadow" data-example-id="hoverable-table">
                <h4>Update Admin</h4>
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone Number
                            <th>Gender</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateRegistered)
                                </td>

                                <td>
                                    @Html.ActionLink("View", "EditAdmin/"+item.AdminId, "Admin")
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "DeleteAdmin/"+item.AdminId, "Admin")
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("UpdateAdmin", new { page }))
            </div>
        </div>
    </div>
</div>


